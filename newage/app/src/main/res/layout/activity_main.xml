<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/totstyle"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Today     "
        android:id="@+id/textView_today"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_alignRight="@+id/textView_you"
        android:layout_alignEnd="@+id/textView_you"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:id="@+id/textView_current_id"
        android:background="@drawable/textstyle"
        android:textStyle="bold|italic"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView_today"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter your Birth Day"
        android:id="@+id/textView_birth"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_below="@+id/textView_current_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="480px"
        android:layout_height="100px"
        android:text=" "
        android:id="@+id/textView_dob_id"
        android:background="@drawable/textstyle"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/textView_birth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:src="@drawable/calender1"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/textView_dob_id"
        android:layout_toRightOf="@+id/textView_dob_id"
        android:layout_toEndOf="@+id/textView_dob_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button_calculate"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_dob_id"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You are  "
        android:id="@+id/textView_you"
        android:textStyle="bold"
        android:layout_below="@+id/button_calculate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:id="@+id/textView_result_id"
        android:background="@drawable/textstyle"
        android:layout_below="@+id/textView_you"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_current_id"
        android:layout_alignEnd="@+id/textView_current_id"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Birth Day in "
        android:layout_marginTop="80dp"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_below="@+id/textView_you"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="400px"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:background="@drawable/textstyle"
        android:id="@+id/textView_next_id"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_result_id"
        android:layout_alignEnd="@+id/textView_result_id"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_text_size_medium_material"/>


</RelativeLayout>
